from datetime import datetime, time
# TODO LIST: -make lunch/specials/break work properly -Allow user input for classes -Make memory file -remaining time
print('Beta 0.0.7', '2018-09-20 19:40:56.594060')
now = datetime.now()
now_time = now.time()
minutes = datetime.now().time().minute
hours = datetime.now().time().hour
actual_time = [hours, minutes]
hour_in_minutes = actual_time[0] * 60
minutes_total = hour_in_minutes + actual_time[1]
classes = ['PARHIST', 'AP CALC', 'AP ENGL', 'PHILOS', 'AP SPLIT', 'PHYSICS', 'COGO']
advisory = ["ADVISORY"]
day_1 = classes[0:5]
day_2 = classes[5:7] + classes[:3]
day_3 = classes[3:] + classes[:1]
day_4 = classes[1:6]
day_5 = advisory + classes[6:] + classes[:3]
day_6 = day_3
day_7 = day_4
day_8 = classes[6:] + classes[:4]
day_9 = classes[4:] + classes[:2]
day_10 = classes[2:]

def time_finder():
    if time(8, 0) <= now_time <= time(9, 8):
        clock = 1
    elif time(9, 13) <= now_time <= time(10, 21):
        clock = 2
    elif time(10, 40) <= now_time <= time(11, 48):
        clock = 3
    elif time(11, 53) <= now_time <= time(12, 33):
        clock = 'specials'  # specials
    elif time(12, 36) <= now_time <= time(13, 16):
        clock = 'lunch'  # lunch
    elif time(13, 20) <= now_time <= time(14, 23):
        clock = 4
    elif time(14, 27) <= now_time <= time(15, 30):
        clock = 5
    else :
        clock = 0
    return clock


def remaining():
    if time_finder() is 1:
        x = 548 - minutes_total
    elif time_finder() is 2:
        x = 621 - minutes_total
    elif time_finder() is 3:
        x = 708 - minutes_total
    elif time_finder() is 4:
        x = 863 - minutes_total
    elif time_finder() is 5:
        x = 930 - minutes_total
    elif time_finder() is 'specials':
        x = 753 - minutes_total
    elif time_finder() is 'lunch':
        x = 796 - minutes_total
    return x

def class_define():
    class_ = input('Which one of the following was your last class yesterday?''\Historia, Calc, English, Philosophy, Spanish, Physics, or Cogo?')
    if class_ is Historia:
        day = 4
    elif class_ is Calc:
        day = 10
    elif class_ is English:
        day = 3
    elif class_ is Philosophy:
        day =  9
    elif class_ is Spanish:
        day = 2
    elif class_ is Physics:
        day = 8
    elif class_ is Cogo:
        day = 1
    else:
        print('Unknown or misspelled class name')
        day_finder()


def day_finder():
    dayQ = input('What day is it today?\ Or type class to input yesterdays last period')
    if dayQ is "class":
        class_define()
    elif dayQ is 1:
        day = 1
    elif dayQ is 2:
        day = 2
    elif dayQ is 3:
        day = 3
    elif dayQ is 4:
        day = 4
    elif dayQ is 5:
        day = 5


